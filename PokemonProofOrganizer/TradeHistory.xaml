<Window x:Class="PokemonProofOrganizer.TradeHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonProofOrganizer"
        mc:Ignorable="d"
        Title="TradeHistory" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <RichTextBox Grid.Row="0" Margin="10" Name="Text" Background="White" Foreground="Black"
             BorderThickness="2" BorderBrush="Black"
             FontFamily="Arial" FontSize="12"
             HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"
                     PreviewKeyDown="TextPreviewKeyDown">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
       <Button Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="1" Margin="10" Height="29" Width="100" Click="Save"/>
    </Grid>
</Window>
